copymax = 4
copyprog = unison-rsync --inplace --compress
copyprogrest = unison-rsync --inplace --compress --partial
copythreshold = 10240
fastcheck = false
group = true
logfile = /var/log/unison.log
owner = true
prefer = {{nfs_mount_path}}/{{profile.root}}/
{% if unison_remote is search(':') -%}
root = ssh://[{{unison_remote}}]/{{nfs_mount_path}}/{{profile.root}}/
{% else -%}
root = ssh://{{unison_remote}}/{{nfs_mount_path}}/{{profile.root}}/
{% endif -%}
root = {{nfs_mount_path}}/{{profile.root}}/
sshargs = -oIdentityFile=/etc/unison/id_ed25519
times = true
